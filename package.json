{
  "name": "@iqprotocol/multiverse",
  "version": "0.3.0-alpha.0",
  "bugs": "https://github.com/iqlabsorg/iq-metaverse-sdk/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/iqlabsorg/iq-metaverse-sdk"
  },
  "license": "MIT",
  "author": "IQ Labs (https://iq.space)",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "typings": "dist/esm/index.d.ts",
  "files": [
    "README.md",
    "dist"
  ],
  "scripts": {
    "build": "yarn typechain && NODE_OPTIONS=--max-old-space-size=5120 rollup -c",
    "build:clean": "rimraf dist",
    "prepublish": "NODE_ENV=production yarn build",
    "compile": "cp -r ./node_modules/@iqprotocol/solidity-contracts-nft/contracts ./contracts && TS_NODE_TRANSPILE_ONLY=1 hardhat compile && rimraf ./contracts && rimraf ./artifacts && rimraf ./cache",
    "start": "rollup -cw",
    "test": "jest --group=unit",
    "typechain": "run-s typechain:clean typechain:generate",
    "typechain:clean": "rimraf src/contracts",
    "typechain:generate": "yarn compile",
    "docs": "run-s docs:clean docs:generate",
    "docs:generate": "NODE_OPTIONS=--max_old_space_size=8192 typedoc --options typedoc.js --entryPointStrategy packages . --out docs && touch docs/.nojekyll",
    "docs:clean": "rimraf docs"
  },
  "lint-staged": {
    "packages/**/*.ts": "yarn lint:fix",
    "package.json": "sort-package-json"
  },
  "dependencies": {
    "caip": "^1.1.0"
  },
  "devDependencies": {
    "@iqprotocol/solidity-contracts-nft": "https://github.com/iqlabsorg/iq-smart-contracts-nft#36de28b3ee0a8afae5604f87c69976cded7660e5",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@latest",
    "@openzeppelin/hardhat-upgrades": "^1.17.0",
    "@typechain/ethers-v5": "10.0.0",
    "@typechain/hardhat": "^6.1.4",
    "ethers": "^5.6.0",
    "hardhat": "^2.6.5",
    "hardhat-deploy": "^0.11.10",
    "typechain": "8.0.0",
    "@knodes/typedoc-plugin-monorepo-readmes": "^0.22.5",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@swc/core": "^1.3.19",
    "@swc/helpers": "^0.4.14",
    "@types/jest": "^28.1.0",
    "@types/node": "^17.0.39",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "jest-runner-groups": "^2.1.0",
    "lint-staged": "^13.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.2",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-swc": "^0.2.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^3.0.1",
    "sort-package-json": "^1.52.0",
    "testcontainers": "^8.8.0",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.2.1",
    "typedoc": "0.22.17",
    "typescript": "^4.7.0"
  },
  "peerDependencies": {
    "ethers": "^5.6.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "typedocMain": "src/index.ts"
}
